body
  font-family 'Poppins', sans-serif
  color white
  background #e26141
  display flex
  flex-direction column
  align-items center
  justify-content center
  min-height 80vh

h1
  font-size 7rem
  span
    // background #e78068
    // padding .5rem 1.5rem
    // border-radius 1.5rem
    text-transform uppercase
    // margin-left 1rem

p
  background white
  display block
  width 50vh
  min-width 500px
  color #e26141
  padding 2rem 1rem
  font-weight bold

a
  color white

nav
  display flex
  justify-content space-between
  opacity .5
  transition .5s ease opacity
  &:hover
    opacity 1

  a
    font-size 2rem
    text-decoration none
    padding .5rem 1.5rem
    background #cf6a88
    margin: 0 .5rem
    border-radius 1.5rem

  a:nth-child(1)
    background #f4cd7b
  a:nth-child(2)
    background #564b91
  a:nth-child(3)
    background #566ee7
  // a:nth-child(4)
  //   background #c34569
  a:nth-child(4)
    background #333
